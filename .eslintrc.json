{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": [
            "error",
            {
                "js": "ignorePackages"
            }
        ],
        "no-underscore-dangle":  ["error", { "allow": ["__dirname", "__filename"] }],
        "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.test.js"]}]
    }
}
